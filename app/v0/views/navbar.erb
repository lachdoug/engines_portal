<div class="navbar">
  <% if current_user %>
    <div class="pull-left">
      <a href="/user/portal"
      class="nav-link <%= 'active' if request.path_info == '/user/portal' %>">
        <%= current_user.user_name %></a>
    </div>
    <div class="pull-right">
      <% if current_user.is_admin? %>
        <a href="/control_panel"
        class="nav-link <%= 'active' if request.path_info.split('/')[1] == 'control_panel' %>">
          Control panel</a>
      <% end %>
      <a href="/user/password/edit"
      class="nav-link <%= 'active' if request.path_info == '/user/password/edit' %>">
        Password</a>
      <a href="/sign_out" class="nav-link">Sign out</a>
    </div>
  <% end %>
</div>
<div class="flash-notice"><%= flash[:notice] %></div>
<div class="flash-alert"><%= flash[:alert] %></div>
