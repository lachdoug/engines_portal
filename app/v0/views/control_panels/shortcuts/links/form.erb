<div class="control-panel">
  <div class="heading"><%= @shortcut.new_record? ? 'New' : 'Edit' %> link to URL shortcut</div>
  <div class="center-align">
    <form
      method="POST"
      action='<%= @shortcut.new_record? ?
        "/control_panel/shortcuts/link" :
        "/control_panel/shortcuts/#{@shortcut.id}/link" %>'
      class="form">
      <div class="left-align">
        <input value="<%= @shortcut.shortcut_type %>" name="shortcut[shortcut_type]" type="hidden"></input>
        <label>Label</label><br>
        <input value="<%= @shortcut.label %>" name="shortcut[label]" required></input><br><br>
        <label>URL</label><br>
        <input value="<%= @shortcut.url %>" name="shortcut[url]" type="url" required></input><br><br>
      </div>
      <a href='<%= @shortcut.new_record? ? "/control_panel/shortcuts/new" : "/control_panel/shortcuts/#{@shortcut.id}" %>' class="btn pull-left"><%= fa 'times', "Cancel" %></a>
      <button type="submit" class="btn pull-right"><%= fa 'check', ( @shortcut.new_record? ? "Create" : "Update" ) %></button>
    </form>
  </div>
</div>
