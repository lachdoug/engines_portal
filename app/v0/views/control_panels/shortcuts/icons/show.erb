<div class="control-panel">
  <a href="/control_panel/shortcuts/<%= @shortcut.id %>" class="btn pull-right">Done</a>
  <div class="heading">Shortcut icon</div>
  <div class="center-align">
    <%= @shortcut.label %><br>
    <image height="96" src="<%= @shortcut.icon_url + '?' + 'nocache=' + @shortcut.icon_updated_at? %>"><br>
    <a href="/control_panel/shortcuts/<%= @shortcut.id %>/icon/edit" class="btn">Upload</a>
    <% if @shortcut.shortcut_type == "engines_app" %>
      <a href="/control_panel/shortcuts/<%= @shortcut.id %>/icon/engines_app/edit" class="btn">Default</a>
    <% end %>
  </div>
  <% if @shortcut.icon_present? %>
    <br>
    <form method="post" action="/control_panel/shortcuts/<%= @shortcut.id %>/icon">
      <input type="hidden" name="_method" value="DELETE">
      <button type="submit" class="btn">Delete icon</button>
    </form>
  <% end %>

</div>
