<a href="/control_panel/shortcuts/<%= @shortcut.id %>" class="btn pull-left">Done</a>
<% if @shortcut.icon_present? %>
  <form method="post" action="/control_panel/shortcuts/<%= @shortcut.id %>/icon" class="pull-right">
    <input type="hidden" name="_method" value="DELETE">
    <button type="submit" class="btn btn-warning">Delete icon</button>
  </form>
<% end %>
<br>

<div class="center-align">
  <h4>Icon</h4>
  <%= @shortcut.label %><br>
  <image height="96" width="96" src="<%= @shortcut.icon_url + '?' + 'nocache=' + @shortcut.icon_updated_at? %>"><br>
  <a href="/control_panel/shortcuts/<%= @shortcut.id %>/icon/edit" class="btn">Upload</a>
  <!-- <a href="/control_panel/shortcuts/<%= @shortcut.id %>/icon/system" class="btn">From system</a> -->
</div>
