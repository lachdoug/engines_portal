<div class="control-panel">
  <div class="heading">Delete shortcut</div>
  <div class="center-align">
    <%= @shortcut.label %><br><br>
    <form class="form" method="post" action="/control_panel/shortcuts/<%= @shortcut.id %>">
      <input type="hidden" name="_method" value="DELETE">
      <a href="/control_panel/shortcuts/<%= @shortcut.id %>" class="btn pull-left"><%= fa 'times', "Cancel" %></a>
      <button type="submit" class="btn pull-right"><%= fa 'check', "Delete" %></button>
    </form>

  </div>
</div>
