<div class="control-panel">
  <a href="/control_panel" class="btn pull-right"><%= fa 'arrow-up' %></a>
  <div class="heading">Distribution groups</div>
  <a href="/control_panel/distribution_groups/new" class="btn"><%= fa 'plus', "New" %></a>
  <hr>
  <div>
    <% @distribution_groups.each do |distribution_group| %>
      <div>
        <a href="/control_panel/distribution_groups/?name=<%= distribution_group[:name] %>" class="btn">
          <%=  fa "caret-right", distribution_group[:name] %>
        </a><br>
        <div class="sub-comment"><small><%= distribution_group[:description] %></small></div>

      </div>
    <% end %>
  </div>
</div>
